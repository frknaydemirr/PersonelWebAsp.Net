@model IEnumerable<MyPeronalWebSite.Models.VT.Tbl_Projects>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-success">
                        <h3 class="card-title text-white">Projeler</h3>
                        <div class="card-tools">
                            @Html.ActionLink("Yeni Proje Ekle", "Create", null, new { @class = "btn btn-light" })
                        </div>
                    </div>

                    <div class="card-body table-responsive">
                        <table id="projeTable" class="table table-bordered table-hover">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Dil ID</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProjectTitle)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProjectImg)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProjectDescription)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProjectEntryTitle)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().ProjectEntryDescription)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().GithubURL)</th>
                                    <th>@Html.DisplayNameFor(model => model.First().isActive)</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row-@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Tbl_Language.ShortTitle</td>
                                        <td>@item.ProjectTitle</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ProjectImg))
                                            {
                                                <img src="@item.ProjectImg" alt="Proje Görseli" style="max-height: 50px;" class="img-thumbnail" />
                                            }
                                            else
                                            {
                                                <span class="text-muted">Görsel Yok</span>
                                            }
                                        </td>
                                        <td class="truncate-text">
                                            @(item.ProjectDescription?.Length > 50
                                                ? item.ProjectDescription.Substring(0, 50) + "..."
                                                : item.ProjectDescription)
                                        </td>
                                        <td>@item.ProjectEntryTitle</td>
                                        <td class="truncate-text">
                                            @(item.ProjectEntryDescription?.Length > 50
                                                ? item.ProjectEntryDescription.Substring(0, 50) + "..."
                                                : item.ProjectEntryDescription)
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.GithubURL))
                                            {
                                                <a href="@item.GithubURL" target="_blank" class="btn btn-sm btn-dark">
                                                    <i class="fab fa-github"></i> GitHub
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Bağlantı Yok</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.isActive == true)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-info" })
                                                <button class="btn btn-danger delete-btn" data-id="@item.ID">
                                                    <i class="fas fa-trash-alt"></i> Sil
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer clearfix">
                        <div class="float-right">
                            @Html.ActionLink("Yeni Proje Ekle", "Create", null, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- DataTables & SweetAlert -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.2/css/buttons.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.bootstrap4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.print.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<style>
    table td {
        vertical-align: middle;
        word-break: break-word;
    }

    .truncate-text {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .dt-buttons .btn {
        margin-right: 5px;
    }
</style>

<script>
    $(document).ready(function () {
        // DataTable değişkeni tanımlandı
        var table = $('#projeTable').DataTable({
            scrollX: true,
            autoWidth: false,
            dom: 'Bfrtip',
            buttons: [
                { extend: 'copyHtml5', className: 'btn btn-secondary btn-sm' },
                { extend: 'excelHtml5', className: 'btn btn-success btn-sm' },
                { extend: 'pdfHtml5', className: 'btn btn-danger btn-sm' },
                { extend: 'print', className: 'btn btn-info btn-sm' }
            ],
            language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json' }
        });

        // Silme butonuna tıklama
        $(document).on('click', '.delete-btn', function (e) {
            e.preventDefault();
            debugger
            var id = $(this).data('id');
            var row = $(this).closest('tr');
            var $btn = $(this);

            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu projeyi silmek istediğinize emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '@Url.Action("DeleteProject", "Admin_Project")',
                        type: 'POST',
                        data: { id: id },
                        beforeSend: function () {
                            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Siliniyor...');
                        },
                        success: function (response) {
                            if (response.success) {
                                table.row(row).remove().draw();
                                Swal.fire('Silindi!', response.message, 'success');
                            } else {
                                Swal.fire('Hata!', response.message || 'Silme işlemi sırasında bir hata oluştu.', 'error');
                            }
                        },
                        error: function (xhr) {
                            Swal.fire('Hata!', 'Sunucu hatası: ' + xhr.statusText, 'error');
                        },
                        complete: function () {
                            $btn.prop('disabled', false).html('<i class="fas fa-trash-alt"></i> Sil');
                        }
                    });
                }
            });
        });
    });
</script>
