@model IEnumerable<MyPeronalWebSite.Models.VT.Tbl_AboutMe>

@{
    ViewBag.Title = "Hakkımda Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- CONTENT WRAPPER BAŞLANGICI -->
<div class="content-wrapper">

    <!-- SAYFA BAŞLIĞI -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hakkımda Listesi</h1>
                </div>
                <div class="col-sm-6">
                   
                </div>
            </div>
        </div>
    </section>

    <!-- ANA İÇERİK -->
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <!-- Başlık -->
                <div class="card-header bg-primary">
                    <h3 class="card-title text-white">Hakkımda Listesi</h3>
                </div>

                <!-- Tablo -->
                <div class="card-body">
                    <table id="aboutMeTable" class="table table-bordered table-hover w-100">
                        <thead class="thead-dark">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.First().ImageURL)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                                <th>@Html.DisplayNameFor(model => model.First().ShortDescription)</th>
                                <th>@Html.DisplayNameFor(model => model.First().LinkedlnURL)</th>
                                <th>@Html.DisplayNameFor(model => model.First().GithubURL)</th>
                                <th>@Html.DisplayNameFor(model => model.First().EmailAdress)</th>
                                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Adress)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Cv)</th>
                                <th>@Html.DisplayNameFor(model => model.First().Tbl_Language.Title)</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row-@item.ID">
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageURL))
                                        {
                                            <img src="@item.ImageURL" style="max-height:50px;" class="img-thumbnail" />
                                        }
                                        else
                                        { <span class="text-muted">Görsel Yok</span>}
                                    </td>
                                    <td>
                                        @( (item.Description ?? "").Split(' ').Length > 25
        ? string.Join(" ", (item.Description ?? "").Split(' ').Take(25)) + "..."
        : item.Description )
                                    </td>

                                    <td>
                                        @( (item.ShortDescription ?? "").Split(' ').Length > 25
        ? string.Join(" ", (item.ShortDescription ?? "").Split(' ').Take(25)) + "..."
        : item.ShortDescription )
                                    </td>
                                    <td>@item.LinkedlnURL</td>
                                    <td>@item.GithubURL</td>
                                    <td>@item.EmailAdress</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Adress</td>
                                    <td>@item.Cv</td>
                                    <td>@item.Tbl_Language.Title</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @Html.ActionLink("Düzenle", "Edit", new { id = item.ID }, new { @class = "btn btn-info" })

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </section>

</div>
<!-- CONTENT WRAPPER BİTİŞİ -->
<!-- CSS Bağlantıları -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.3.2/css/buttons.bootstrap4.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<!-- JS Bağlantıları -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.bootstrap4.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.print.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- DataTable Başlat -->
<script>
    $(document).ready(function () {
        var table = $('#aboutMeTable').DataTable({
            scrollX: true,
            autoWidth: false,
            dom: 'Bfrtip',
            buttons: [
                { extend: 'excelHtml5', className: 'btn btn-success btn-sm', text:'<i class="fas fa-file-excel"></i> Excel' },
                { extend: 'pdfHtml5', className: 'btn btn-danger btn-sm', text:'<i class="fas fa-file-pdf"></i> PDF' },
                { extend: 'print', className: 'btn btn-info btn-sm', text:'<i class="fas fa-print"></i> Yazdır' }
            ],
            language: { url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/tr.json' }
        });

        $(document).on('click', '.delete-btn', function(e){
            e.preventDefault();
            var id = $(this).data('id');
            var row = $(this).closest('tr');
            var $btn = $(this);

            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu kaydı silmek istediğinize emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if(result.isConfirmed){
                    $.ajax({
                        url: '@Url.Action("DeleteAboutMe", "Admin_AboutMe")', // Controller ve Action
                        type: 'POST',
                        data: { id: id },
                        beforeSend: function(){
                            $btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Siliniyor...');
                        },
                        success: function(response){
                            if(response.success){
                                table.row(row).remove().draw();
                                Swal.fire('Silindi!', response.message, 'success');
                            } else {
                                Swal.fire('Hata!', response.message || 'Silme işlemi sırasında bir hata oluştu.', 'error');
                            }
                        },
                        error: function(xhr){
                            Swal.fire('Hata!', 'Sunucu hatası: ' + xhr.statusText, 'error');
                        },
                        complete: function(){
                            $btn.prop('disabled', false).html('<i class="fas fa-trash-alt"></i> Sil');
                        }
                    });
                }
            });
        });
    });
</script>

<!-- Özel CSS -->
<style>
    table td {
        vertical-align: middle;
        word-break: break-word;
    }

    .truncate-text {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .dt-buttons .btn {
        margin-right: 5px;
    }
</style>
