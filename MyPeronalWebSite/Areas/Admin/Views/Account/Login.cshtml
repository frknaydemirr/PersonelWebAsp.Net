@model MyPeronalWebSite.Models.VT.Tbl_User
@{
    Layout = null;
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Giriş Yap</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                   if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.Error
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, "Kullanıcı Adı", new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı adınızı girin" })
                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Password, "Şifre", new { @class = "control-label" })
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>